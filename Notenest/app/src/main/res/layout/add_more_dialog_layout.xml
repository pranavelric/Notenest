<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        android:background="@color/amber"
        android:id="@+id/heading_img"
        />

    <TextView
    android:id="@+id/files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/heading_img"
        android:text="Images"
        android:drawableStart="@drawable/ic_baseline_image_24"
        android:drawableTint="@color/black"
        android:textSize="@dimen/_16sdp"
        android:drawablePadding="@dimen/_16sdp"
        android:padding="@dimen/_16sdp"
        />

    <TextView
        android:id="@+id/sketch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/files"
        android:text="Sketch"
        android:drawableStart="@drawable/ic_brush"
        android:drawableTint="@color/black"
        android:textSize="@dimen/_16sdp"
        android:drawablePadding="@dimen/_16sdp"
        android:padding="@dimen/_16sdp"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_5sdp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>